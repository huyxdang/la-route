# Le-Route Environment Variables

# Required: Mistral API Key
MISTRAL_API_KEY=your_mistral_api_key_here

# Required: HuggingFace Token (for dataset upload)
HF_TOKEN=your_huggingface_token_here

# Router type: "rule" (fallback) or "mlp" (trained router)
ROUTER_TYPE=mlp

# Path to trained MLP model (only needed if ROUTER_TYPE=mlp)
MLP_MODEL_PATH=./mlp_router.pt

# Path to fitted PCA (only needed if ROUTER_TYPE=mlp)
PCA_PATH=./pca.pkl

# Enable routing logs for training data collection
LOG_ROUTING=true

# HuggingFace dataset name for upload
HF_DATASET_NAME=huyxdang/le-route-docbench-data
